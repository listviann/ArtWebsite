@model IQueryable<Author>
@{
    PageTextField pageTextField = ViewBag.PageTextField;
    ViewBag.Title = pageTextField.Title;
}

<div>
    @if(Model.Any())
    {
        <ul>
            @foreach (Author entity in Model)
            {
                <li>
                    <h4><a asp-area="" asp-controller="Authors" asp-action="Index" asp-route-id="@entity.Id">@entity.Name</a></h4>
                </li>
            }
        </ul>
    }
</div>